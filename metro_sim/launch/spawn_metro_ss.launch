<launch>

  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="z" default="0.0"/>
  <arg name="yaw" default="0.0"/>

  <!-- Load the URDF into the ROS Parameter Server -->
  <param name="robot_description"
    command="$(find xacro)/xacro --inorder '$(find metro_sim)/urdf/metro_ss.urdf'"/>

  <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" 
        args="-urdf -model metro_ss -param robot_description"/> <!-- rmb to include -model: <name> as the one stated in the urdf file-->

</launch>
